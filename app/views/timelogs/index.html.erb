<div class="jumbotron text-center">
  <h1>Time Log</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Date</th>
      <th>Description</th>
      <th>Time Spent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @time_logs.each do |log| %>
      <tr>
        <% if log.user == current_user %>
          <td><%= link_to 'Delete', timelog_path(log), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
          <td><%= log.created_at.to_date %></td>
          <td><%= log.description %></td>
          <td><%= log.timespent %> minutes</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>